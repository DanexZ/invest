<%- include('nav_pools') %>

<%- include('../../../frontend/includes/flash.ejs') %>

<h3>Utwórz zbiórkę</h3>

<div id="admin">

    <div class="box">

        <h4>Utwórz nową zbiórkę</h4>

        <form id="first-calculate" action="/dashboard/pool/create" method="POST" style="width: 100%">
            <label for="type">Typ inwestycji</label>
            <select name="type" id="type" required>
                <option value="Kawalerka">Kawalerka</option>
                <option value="Mieszkanie">Mieszkanie</option>
                <option value="Blok">Blok</option>
                <option value="Elektrownia">Elekrownia</option>
            </select>

            <label for="amount">Docelowa kwota</label>
            <input id="amount" type="number" name="amount" min="0" required>

            <label for="rent">Czynsz, który będzie pobierany</label>
            <input type="number" id="rent" name="rent" min="0" required>

            <h4>Koszty</h4>
            <hr>
            <label for="tax">Podatek (format 0.19)</label>
            <input type="number" id="tax" name="tax" min="0" value="0.19" step="0.01" required>

            <label for="spoldzielnia">Spółdzielnia (czynsz spółdzielni)</label>
            <input type="number" id="spoldzielnia" name="spoldzielnia" min="0" step="0.01" required>

            <label for="commision">Prowizja zarządcza (format 0.07)</label>
            <input type="number" id="commision" name="commision" min="0" value="0.07" step="0.01" required>
            <hr>

            <label for="profit_netto">Zysk miesięczny po kosztach</label>
            <input type="number" id="profit_netto" name="profit_netto" min="0" step="0.01" placeholder="Zostanie wyliczony">

            <label for="profitability">Rentowność w skali roku</label>
            <input id="profitability" type="number" name="profitability" step="0.01" min="0" placeholder="Zostanie wyliczona">

            <label for="nr">Nr</label>
            <input id="nr" type="number" name="nr" min="0" required>

            <label for="details">Zawrzyj szczegóły</label>
            <textarea name="details" id="details" cols="30" rows="10" style="min-width: 100%; max-width: 100%"></textarea>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn">Utwórz</button>
        </form>

    </div>

    
</div>